<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#f9ac9d"
        android:id="@+id/hrTime">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="Time: "
            android:textSize="32sp"
            android:id="@+id/tvT"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/hrTime"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/verCel">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="48sp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:background="#f7d9c4"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:id="@+id/tvN"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Taboo"
            android:textColor="#ff7079"
            android:textSize="28sp"
            android:layout_gravity="center"
            android:id="@+id/tvT1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Taboo"
            android:textColor="#ff7079"
            android:textSize="28sp"
            android:layout_gravity="center"
            android:id="@+id/tvT2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Taboo"
            android:textColor="#ff7079"
            android:textSize="28sp"
            android:layout_gravity="center"
            android:id="@+id/tvT3"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/hrTime"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/verMain">

        <TextView
            android:id="@+id/tvHU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Heads Up!"
            android:gravity="center"
            android:textSize="32sp"
            android:layout_marginBottom="24dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start"
            android:background="#f9ac9d"
            android:layout_gravity="center"
            android:id="@+id/bStart"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>